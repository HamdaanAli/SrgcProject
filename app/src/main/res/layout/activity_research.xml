<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mcntraining.demo2.AboutSRGC.Research">

    <Button
        android:id="@+id/AKTU"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:autoText="true"
        android:background="@drawable/circle"
        android:backgroundTintMode="multiply"
        android:elevation="5dp"
        android:focusable="?android:attr/windowOverscan"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="@color/white"
        android:text="Seminar/workshop"
        android:textColor="@color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/CCSU"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/AKTU"
        android:layout_below="@+id/AKTU"
        android:layout_marginTop="156dp"
        android:autoText="true"
        android:background="@drawable/circle"
        android:elevation="5dp"
        android:focusable="?android:attr/windowOverscan"
        android:fontFamily="@font/nunito_bold"
        android:shadowColor="@color/white"
        android:text="NPTEL Online Certificate"
        android:textColor="@color/white"
        android:visibility="visible" />

</RelativeLayout>
